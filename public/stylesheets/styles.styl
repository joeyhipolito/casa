@font-face
  font-family 'BebasNeue'
  src url('../fonts/BebasNeue-webfont.eot')
  src url('../fonts/BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/BebasNeue-webfont.woff') format('woff'),
  url('../fonts/BebasNeue-webfont.ttf') format('truetype'),
  url('../fonts/BebasNeue-webfont.svg#BebasNeueRegular') format('svg')
  font-weight normal
  font-style normal

@font-face
  font-family 'Chalk'
  src url('../fonts/chalkduster-webfont.eot')
  src url('../fonts/chalkduster-webfont.eot?#iefix') format('embedded-opentype'),
  url('../fonts/chalkduster-webfont.woff') format('woff'),
  url('../fonts/chalkduster-webfont.ttf') format('truetype'),
  url('../fonts/chalkduster-webfont.svg#BebasNeueRegular') format('svg')
  font-weight normal
  font-style normal


*
  z-index 1

html, body
  height 100%
  width 100%
  margin 0px
  padding 0px

body
  background #fff
  overflow-x hidden

#wrapper
  height 100%

#scroller
  height 100%

#navigation
  background rgba(255,255,255,0.9)
  box-shadow 0px 4px 15px rgba(0,0,0,0.07)
  height 80px
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  -o-transition all 0.3s
  transition all 0.3s
  width 100%
  z-index 99999
  > .container
    height 100%
    > .branding
      display inline-block
      height 100%
      &:before
        content ''
        display inline-block
        height 100%
        vertical-align middle
      h1.logo,
      img.logo
        display inline-block
        font 2em BebasNeue
        margin 0
        vertical-align middle
#primary-nav
  height 100%
  list-style none
  margin 0
  padding 0
  text-align right
  > li
    display inline-block
    height 100%
    margin-right 20px
    font 1.6em BebasNeue
    text-align center
    &:before
      content ''
      display inline-block
      height 100%
      vertical-align middle
    a
      color #333
      text-shadow 0 1px 0 #ccc
      -webkit-transition all 0.3s
      -moz-transition all 0.3s
      -o-transition all 0.3s
      transition all 0.3s
      &:hover
        color rgba(255,214,0,1)
        text-decoration none
#mobile-nav
  display none
  position relative
#scroller.landing div[class*='screen-'] h1
  text-shadow 0px 10px 10px rgba(0,0,0,0.4)
#scroller.landing div[class*='screen-'] p
  color #ededed
  font-size 1.5em
  text-shadow 0 1px 2px rgba(0,0,0,0.3)

div[class*='screen-']
  background-color #fff
  background-size cover
  background-position bottom center
  background-repeat no-repeat
  height 100%
  position relative
  width 100%
  z-index 0
  > .container > h1
    border-bottom 1px solid #dfdfdf
    font 5em Helvetica Neue
    font-weight 500
    margin 20px 0 20px 0
    text-align center
    &.title
      color #fff
      text-shadow 0 2px 5px rgba(0,0,0,0.3)
      text-align left
  > .container div[class*='col-md'] .vector
      position absolute
      top 0
      width 100%
  > .container div[class*='col-md'] > h1.title
      // border 8px solid #fff
      display inline-block
      // padding 0 24px
      color #fff
      font 7em Helvetica Neue
      font-weight 500
      text-shadow 0 2px 5px rgba(0,0,0,0.3)
      text-align left
  > .container div[class*='col-md'] > p
    color #888
    // font 1em Helvetica Neue
    font 1.4em Cambria
    text-align justify
    text-indent 80px
    > h1
      border-bottom 1px solid #dfdfdf
      font 3em BebasNeue
      font-weight 500
    .btn-large
      min-width 200px
      min-width auto
      height 60px;
      font 1em Helvetica Neue
      float right
      font-weight 500
    &.dark
      color #392212 !important
      text-shadow none !important
      font-weight 500
    &.lead
      font-style italic
  &.banner
    background-size cover
    background-position center center
    height 300px
    .container > h1
      border 0
      font 7em Helvetica Neue
      font-weight 500
  &.forms label
    font 2em BebasNeue
    color #fff
    text-shadow 0 2px 5px rgba(0,0,0,0.4)
  &.light
    background-color #f5f5f5
    margin-bottom 0
    > h1
      border-bottom 1px solid #fff

  &:nth-last-child(2)
    padding-bottom 80px
    margin-bottom 0

.footer
  background #333
  border-top 1px solid #000
  color #fff
  height 60px
  > .container
    text-align center
    &:before
      content ''
      display inline-block
      height 100%
      vertical-align middle
    p 
      word-wrap: break-word;
      margin-bottom 0
.overlay
  background: rgba(255,214,0,0.8);
  bottom: 0;
  content: '';
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 0;

.btn-casa
  background #ebd72d
  border 1px solid #e5d01a
  color #000
  margin-top 10px
  -webkit-transition 0.2s
  -moz-transition 0.2s
  -ms-transition 0.2s
  -o-transition 0.2s
  transition 0.2s
  &:hover
    background #ffe508
    border 1px solid #ecd512
  > i[class*='icon-']
    margin 0 5px
  &.dark
    background #392212
    color #ccc
    border 0
    &:hover
      background #37261a
      color #fff

